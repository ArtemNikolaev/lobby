{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SignUp Schema",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 6
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 6
    }
  },
  "required": ["username", "email", "password"]
}
