{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SignIn Schema",
  "type": "object",
  "properties": {
    "login": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 6
        },
        {
          "type": "string",
          "format": "email"
        }
      ]
    },
    "password": {
      "type": "string",
      "minLength": 6
    }
  },
  "required": ["login", "password"]
}
